<%- include("_head.ejs", {pgtitle: "My Household"}); %>
<%- include("_header.ejs",{household: household}); %>
<div class="site-wrapper-inner">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-6">

    <form class="add col-xs-6 col-md-6" action="/addnewitem" method="get">
        <input type="submit" name="add-item" value="Add" class="button-special btn btn-primary">
    </form>
    <form class="delete-all col-xs-6 col-md-6" action="/delete" method="post">
        <input type="submit" value="Delete All" class="button-special btn btn-primary pull-right">
    </form>
    </div>

    <div class="recipe-row col-xs-12">
      <fieldset class="col-xs-12">
          <ul class="col-xs-12 col-lg-6" id="socketMessages">
              <% groceries.forEach(function(gro){ %>
                  <li>
                      <h3 class="col-xs-9"><%= gro.name %></h3>
                      <form class="delete" action="/delete/<%=gro.name%>" method="post">
                          <input type="submit" name="delete" value="Delete" class="col-xs-3 button-delete btn btn-warning">
                      </form>
                  </li>
              <% }); %>
          </ul>
      </fieldset>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.4.8/socket.io.js"></script>
<script src="/socket.js"></script>
<%- include("_about.ejs"); %>
<%- include("_footer.ejs"); %>
