<%- include("_head.ejs",{pgtitle:"Add New Item"}); %>
<%- include("_header.ejs",{household:household}); %>
<div class="site-wrapper-inner">

    <div class="col-xs-12 col-lg-6">
        <h1 class="col-lg-12">Search</h1>
        <form class="api-search" action="/addnewitem/search_api_item" method="post">
            <fieldset class="item-type col-xs-12 col-lg-12">
                <input type="text" name="search" placeholder="Search">
                <label for="num_results">#</label>
                <input type="number" name="num_results" placeholder="10">
                <input type="submit" name="submit" value="Submit" id="api_search" class="col-xs-12 col-lg-8 btn btn-primary">
            </fieldset>
        </form>
        <br>
        <h1 class="add-custom-item col-lg-12">Add Custom Item</h1>
        <br>
        <br>
        <form action="/addnewitem/addnew" method="post">
            <fieldset class="col-xs-12 col-lg-12">
                <input type="text" name="item_name" placeholder="Item Name" id="item_name">
                <label for="item_qty">Qty</label>
                <input type="number" name="item_qty" placeholder="1" id="item_qty">
                <input type="submit" value="Add" class="col-xs-12 col-lg-8 btn btn-primary" id="socketButton">
            </fieldset>
        </form>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <% if(typeof product != "undefined") { %>
                <% product.products.forEach(function(item){ %>
                    <form class="item-name" action="/addnewitem/select" method="post">
                        <img name="chosen_url" src=<%=item.image%>>
                        <input type="submit" name="chosen_name" value="<%=item.title%>" class="btn btn-success">
                    </form>
                <%  })} %>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.4.8/socket.io.js"></script>
    <script src="/emitter.js"></script>
    <%- include("_about.ejs"); %>
    <%- include("_footer.ejs"); %>
